<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PasswordTool" Height="200" Width="400" Name="frmPasswordTool">
    <Grid>
        <Label Name="lblPassword" Content="Generated Password" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="133,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="249"/>
        <Label Name="lblStrength" Content="Password Strength" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtStrength" FontWeight="Bold" HorizontalAlignment="Left" TextAlignment="Center" Height="23" Margin="133,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="249"/>
        <Slider Name="sldLength" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="372" Minimum="1" Maximum="30" Value="10" SmallChange="1" TickPlacement="BottomRight" AutoToolTipPlacement="TopLeft"/>
        <CheckBox Name="chkNumerical" Content="Alphanumerical Only" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>